@{
    ViewData["Title"] = "DevConnect - Login";
}
 <link rel="stylesheet" href="~/css/login.css">

 <script defer>
     const usuarioNovoCadastrado = "@TempData[key: "UsuarioNovoCadastrado"]";

     if(usuarioNovoCadastrado == "Cadastrado"){
        alert("Usuário cadastrado com sucesso 😁");
     }
 </script>
<h1>Tela principal login</h1>
    <main>
        <div>
            <form id="formulario" class="estilo-formulario">
                <img src="../images/logo-devconnect-lg.svg" aly="">

                <div>
                    <label for="">Nome do usuário:</label>
                    <input type="text" name="" id="">
                </div>
                <div>
                    <label for="">Senha:</label>
                    <input type="password" name="" id="">
                </div>

                <button type="submit" class="formulario-botao-azul">Enter</button>

                <p>ou</p>

                <a href="#">Esqueceu a senha?</a>
            </form>

            <section id="secao-cadastro" class="estilo-formulario">
                <p>Não tem uma conta? <a asp-action="Index" asp-controller="Usuario">Cadastre-se</a></p>
            </section>

            <p class="informacao-aplicativo">Obtenha o aplicativo.</p>

            <section id="secao-instalacao">
                <img src="../images/app-store.svg" alt="Imagem informando para 
                abaixar no app store.">

                <img src="../images/google-play.svg" alt="Imagem informando para
                abaixar no play store.">
            </section>


            </section>

        </div>
    </main>
